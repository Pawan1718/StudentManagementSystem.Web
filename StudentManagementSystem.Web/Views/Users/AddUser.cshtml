@model StudentManagementSystem.Models.UserViewModel

@{
    ViewData["Title"] = "AddUser";
}

<h4 class="mt-3">Add New Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUser" class="needs-validation" novalidate>
            <!-- Add Bootstrap 5 form validation classes -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label> <!-- Use Bootstrap 5 form label class -->
                <input asp-for="Name" class="form-control" required /> <!-- Add required attribute for form validation -->
                <div class="invalid-feedback">
                    <!-- Bootstrap 5 invalid feedback class -->
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" required />
                <div class="invalid-feedback">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" required />
                <div class="invalid-feedback">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button> <!-- Use Bootstrap 5 button class -->
                <a asp-action="Index" class="btn btn-secondary">Back</a> <!-- Use Bootstrap 5 button class -->

            </div>
           
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
