@model AttendExamViewModel


    <h1>@Model.ExamName</h1>
    @if (Model.Message == "")
    {
        <form asp-action="AttendExam" asp-controller="Students" method="post">

            <input type="hidden" asp-for="StudentId" />
            <ul>
                @for (int i = 0; i < Model.qnAList.Count(); i++)
                {
                    <input type="hidden" asp-for="@Model.qnAList[i].Id" />
                    <input type="hidden" asp-for="@Model.qnAList[i].ExamId" />
                    <li>
                        <label for="@Model.qnAList[i].QuestionTitle">@Model.qnAList[i].QuestionTitle</label>
                    </li>
                    <li>
                        <select asp-for="@Model.qnAList[i].SelectedAnswer" class="form-control">
                            <option value="" selected disabled>--- Select Answer ---</option>
                            <option value="1">@Model.qnAList[i].Option1</option>
                            <option value="2">@Model.qnAList[i].Option2</option>
                            <option value="3">@Model.qnAList[i].Option3</option>
                            <option value="4">@Model.qnAList[i].Option4</option>
                        </select>
                    </li>
                }
            </ul>
            <button type="submit">Submit</button>
        </form>
    }
    else
    {
        <h1>No Exam.</h1>
    }

