@model StudentManagementSystem.Models.GroupViewModel

@{
    ViewData["Title"] = "AddGroup";
}

<h4 class="mt-3">Add Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGroup" class="needs-validation" novalidate>
            <!-- Add Bootstrap 5 form validation classes -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Class Name</label> <!-- Use Bootstrap 5 form label class -->
                <input asp-for="Name" class="form-control" required /> <!-- Add required attribute for form validation -->
                <div class="invalid-feedback">
                    <!-- Bootstrap 5 invalid feedback class -->
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" required ></textarea>
                <div class="invalid-feedback">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button> <!-- Use Bootstrap 5 button class -->
                <a asp-action="Index" class="btn btn-secondary">Back</a> <!-- Use Bootstrap 5 button class -->
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
