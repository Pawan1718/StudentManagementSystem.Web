@model StudentManagementSystem.Models.GroupStudentViewModel

@{
    ViewData["Title"] = "GroupDetails";
}

<h4 class="mt-3">Assign Class to Students</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GroupDetails" class="needs-validation" novalidate>
            <!-- Add Bootstrap 5 form validation classes -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="GroupId" class="form-control" />
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.StudentList.Count; i++)
            {
                <div class="form-check">
                    <!-- Bootstrap 5 form-check class -->
                    <input asp-for="@Model.StudentList[i].Id" class="form-check-input" />
                    <input asp-for="@Model.StudentList[i].isChecked" class="form-check-input" />
                    <label class="form-check-label">@Model.StudentList[i].Name</label> <!-- Bootstrap 5 form-check-label class -->
                </div>
            }
            <div class="mb-3 mt-3">
                <!-- Add margin-bottom for spacing -->
                <button type="submit" class="btn btn-primary">Assign</button> <!-- Use Bootstrap 5 button class -->
                <a asp-action="Index" class="btn btn-secondary">Back</a> <!-- Use Bootstrap 5 button class -->
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
